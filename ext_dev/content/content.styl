@import "nib"

#cat-animation
  display: block
  width: 300px
  height: 300px
  background-repeat: no-repeat
  animation-duration: 0.5s
  animation-name: action
  animation-timing-function: steps(9)
  animation-iteration-count: infinite
  animation-direction: alternate

  for action in pitch yawn hungry walk_normal_tails sleep walk_normal
    &.cat-animation__{action}
      background-image: url('./action/'action'.png')
